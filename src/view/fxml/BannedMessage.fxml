<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <VBox alignment="CENTER" prefHeight="200" prefWidth="400" spacing="10" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Accesso negato" />
            <Label text="Sei stato bannato da questa community." />
            <HBox alignment="CENTER" spacing="5">
                <Label text="Durata ban:" />
                <Label fx:id="banDurationLabel" style="-fx-font-weight: bold;" text="30 giorni" />
            </HBox>
            <HBox alignment="CENTER" spacing="5">
                <Label text="Motivo:" />
                <Label fx:id="banReasonLabel" maxWidth="350" style="-fx-font-weight: bold;" text="Violazione delle regole" wrapText="true" />
            </HBox>
            <Button fx:id="closeButton" text="OK" />
        </VBox>
    </children>
</AnchorPane>
