<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="721.0" prefWidth="935.0" style="-fx-background-color: transparent;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">

    <VBox alignment="TOP_CENTER" layoutX="20.0" layoutY="14.0" prefHeight="667.0" prefWidth="899.0" spacing="10" stylesheets="@../css/CommunityCreationPage.css" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="16.0" AnchorPane.topAnchor="14.0">

        <Text fx:id="headerTitle" text="Create Community">
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin></Text>

        <!-- Title Input -->
        <TextField fx:id="titleField" maxWidth="580.0" promptText="Community Title" />

        <!-- Description Input -->
        <TextArea fx:id="descriptionArea" maxWidth="580" prefHeight="132.0" prefRowCount="4" prefWidth="580.0" promptText="Community Description..." wrapText="true">
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin></TextArea>

        <!-- Rules Section -->
        <VBox fx:id="rulesContainer" maxWidth="580.0" prefHeight="291.0" prefWidth="580.0" spacing="10">
            <Text id="rulesHeader" text="Community Rules">
            <VBox.margin>
               <Insets left="10.0" top="10.0" />
            </VBox.margin></Text>
         <TextField fx:id="RuleTitle1" maxWidth="150.0" promptText="Rule's title 1">
            <VBox.margin>
               <Insets left="10.0" right="10.0" top="20.0" />
            </VBox.margin>
         </TextField>
            <TextArea fx:id="rule1" maxWidth="550.0" prefRowCount="2" promptText="Rule 1" wrapText="true">
            <VBox.margin>
               <Insets bottom="10.0" left="10.0" right="10.0" />
            </VBox.margin></TextArea>
         <TextField fx:id="RuleTitle2" maxWidth="150.0" promptText="Rule's title 2">
            <VBox.margin>
               <Insets left="10.0" right="10.0" top="10.0" />
            </VBox.margin>
         </TextField>
            <TextArea fx:id="rule2" maxWidth="550.0" prefRowCount="2" promptText="Rule 2" wrapText="true">
            <VBox.margin>
               <Insets bottom="10.0" left="10.0" right="10.0" />
            </VBox.margin></TextArea>
         <TextField fx:id="RuleTitle3" maxWidth="150.0" promptText="Rule's title 3">
            <VBox.margin>
               <Insets left="10.0" right="10.0" top="10.0" />
            </VBox.margin>
         </TextField>
            <TextArea fx:id="rule3" maxWidth="550.0" prefRowCount="2" promptText="Rule 3" wrapText="true">
            <VBox.margin>
               <Insets bottom="10.0" left="10.0" right="10.0" />
            </VBox.margin></TextArea>
         <VBox.margin>
            <Insets top="15.0" />
         </VBox.margin>
        </VBox>

        <!-- Create Button -->
        <Button fx:id="createButton" text="Create Community">
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin></Button>
    </VBox>
</AnchorPane>
