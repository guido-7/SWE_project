<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<!-- Questa card mostra il post con titolo, autore, orario, contenuto e area di reazione in basso a destra -->

<VBox prefHeight="142.0" prefWidth="548.0" spacing="15" styleClass="post-container" stylesheets="@../css/Post.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="src.controllers.PostController">

    <!-- Header: titolo, autore e orario -->
    <HBox alignment="CENTER_LEFT" spacing="10">
        <HBox prefHeight="20.0" prefWidth="169.0">
            <children>
                <Label fx:id="community_title" text="COMMUNITY_NAME" />
            </children>
        </HBox>
        <Label fx:id="username" styleClass="post-author" text="â€¢  Author" />
        <Label fx:id="date" styleClass="post-time" text="12:34" />
    </HBox>
    <Label fx:id="title" styleClass="post-title" text="Post Title" />

    <!-- Contenuto del post -->
    <Label fx:id="content" styleClass="post-content" text="Contenuto del post..." wrapText="true" />

    <!-- Area delle reazioni: like, punteggio, dislike -->
    <HBox alignment="CENTER_RIGHT" spacing="10">
        <Button fx:id="likeButton" styleClass="like-button" text="Like" />
        <Label fx:id="scoreLabel" styleClass="score-label" text="0" />
        <Button fx:id="dislikeButton" styleClass="dislike-button" text="Dislike" />
    </HBox>
</VBox>
