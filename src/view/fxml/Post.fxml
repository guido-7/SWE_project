<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<!-- Questa card mostra il post con titolo, autore, orario, contenuto e area di reazione in basso a destra -->

<VBox fx:id="myVBox" minHeight="180.0" prefWidth="550.0" spacing="15" styleClass="post-container" stylesheets="@../css/Post.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">

    <!-- Header: titolo, autore e orario -->
    <HBox alignment="CENTER_LEFT" spacing="10">
      <Label fx:id="community" text="Community" />
      <Label text="·" />
        <Label fx:id="username" styleClass="post-author" text="Author" />
      <Label text="·" />
        <Label fx:id="date" styleClass="post-time" text="12:34" />
      <Pane prefHeight="0.0" prefWidth="291.0" HBox.hgrow="ALWAYS" />
      <ImageView fx:id="deletePostButton" fitHeight="21.0" fitWidth="27.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/delete.png" />
         </image>
      </ImageView>
    </HBox>
    <Label fx:id="title" styleClass="post-title" text="Post Title" />

          <!-- Contenuto del post -->
    <Label fx:id="content" maxWidth="540.0" styleClass="post-content" text="Contenuto del post..." wrapText="true" />

    <!-- Area delle reazioni: like, punteggio, dislike -->
    <HBox alignment="CENTER_RIGHT" spacing="10">
        <Button fx:id="likeButton" styleClass="like-button" text="Like" />
        <Label fx:id="scoreLabel" styleClass="score-label" text="0" />
        <Button fx:id="dislikeButton" styleClass="dislike-button" text="Dislike" />
      <Button fx:id="postButton" mnemonicParsing="false" styleClass="comment-button">
         <graphic>
            <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/Comment.png" />
               </image>
            </ImageView>
         </graphic>
         <HBox.margin>
            <Insets />
         </HBox.margin>
      </Button>
    </HBox>
</VBox>
