<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600.0" prefWidth="866.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">

    <!-- LEFT PANEL: Community Rules Management -->
    <left>
        <VBox spacing="10" styleClass="side-panel" />
    </left>

    <!-- CENTER PANEL: Reports Management -->
    <center>
        <VBox spacing="10">

            <TableView fx:id="reportsTable" maxWidth="480.0" prefHeight="490.0" prefWidth="402.0" stylesheets="@../css/CommunitySettings.css">
                <columns>
                    <TableColumn fx:id="reporter" text="Reporter" />
                    <TableColumn fx:id="reported" text="Reported" />
                    <TableColumn fx:id="content" prefWidth="168.0" text="Reported Post/Comment" />
                    <TableColumn fx:id="title" text="Post Title" />
                </columns>
            <VBox.margin>
               <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
            </VBox.margin>
            </TableView>
        </VBox>
    </center>
   <top>
      <ImageView fx:id="exit" fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="TOP_RIGHT">
         <BorderPane.margin>
            <Insets right="20.0" top="20.0" />
         </BorderPane.margin>
         <image>
            <Image url="@../images/X.jpg" />
         </image>
      </ImageView>
   </top>
</BorderPane>
