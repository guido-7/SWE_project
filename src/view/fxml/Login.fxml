<AnchorPane fx:id="login_label" prefHeight="600.0" prefWidth="600.0" stylesheets="@../css/Login.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="src.controllers.LoginController">
   <children>
      <TextField fx:id="user_id" layoutX="248.0" layoutY="247.0" promptText="email.@gmail.com" stylesheets="@../css/Login.css" />
      <Label fx:id="title" layoutX="226.0" layoutY="125.0" stylesheets="@../css/Login.css" text="LOGIN PAGE">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      <Button fx:id="login_button" layoutX="258.0" layoutY="457.0" mnemonicParsing="false" onAction="#handleLoginButtonAction" prefHeight="30.0" prefWidth="100.0" text="Login" />
      <PasswordField fx:id="password_id" layoutX="248.0" layoutY="352.0" promptText="password" stylesheets="@../css/Login.css" />
      <ImageView fitHeight="36.0" fitWidth="35.0" layoutX="209.0" layoutY="243.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/login_icon.jpg" />
         </image>
      </ImageView>
      <ImageView fitHeight="36.0" fitWidth="49.0" layoutX="197.0" layoutY="351.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/password_icon.png" />
         </image>
      </ImageView>
      <ImageView fitHeight="102.0" fitWidth="159.0" layoutX="257.0" layoutY="23.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/Logo.png" />
         </image>
      </ImageView>
      <Hyperlink layoutX="244.0" layoutY="380.0" text="Forgot your password?" />
      <Hyperlink fx:id="sign_up" layoutX="323.0" layoutY="497.0" onAction="#handleSignUpButtonAction" text="Sign Up" />
      <Label layoutX="240.0" layoutY="500.0" text="Not a member?" />
      <StackPane layoutX="60.0" layoutY="404.0" prefHeight="40.0" prefWidth="500.0">
         <children>
            <Label fx:id="errorLabel" alignment="CENTER" contentDisplay="CENTER" text="errore" />
         </children>
      </StackPane>
   </children>
</AnchorPane>
